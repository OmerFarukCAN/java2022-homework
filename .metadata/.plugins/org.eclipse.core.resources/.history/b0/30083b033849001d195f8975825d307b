package mukemmelSayiDemo;

import java.util.ArrayList;
import java.util.List;

public class Main {
	public static void main(String[] args) {

		int bolum = 0;
		List<Integer> mukemmels = new ArrayList<Integer>();
		mukemmels.add(2);
		System.out.println("Sayi asaldir: 2");

		for (int i = 3; i <= 11; i++) {
			for (int j = 2; j <= 11; j++) {
				if (i % j == 0) {
					bolum += 1;
				}
			}

			if (bolum > 1) {
				System.out.println("Sayi asal degildir: " + i);
				bolum = 0;
			} else {
				System.out.println("Sayi asaldir: " + i);
				mukemmels.add(i);
			}
		}

		for (int i = 0; i < mukemmels.size(); i++) {
			System.out.println(i + 1 + ".Mukemmel sayi: "
					+ ((int) Math.pow(2, mukemmels.get(i) - 1)) * ((int) Math.pow(2, mukemmels.get(i)) - 1));
		}
	}
}
