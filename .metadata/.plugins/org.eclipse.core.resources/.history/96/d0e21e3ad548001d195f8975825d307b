package mukemmelSayiDemo;

public class Main {
	public static void main(String[] args) {

		int bolum = 0;

		for (int i = 3; i < 9; i++) {
			for (int j = 2; j < 9; j++) {
				if (i % j == 0) {
					bolum += 1;	
				}
			}
			System.out.println("Sayi asaldir: " + (i-1));
			
			if (bolum > 1) {
				System.out.println("Sayi asal degildir: " + i);
				bolum = 0;
			}else {
				System.out.println("Sayi asaldir: " + i);
				System.out.println("Mukemmel sayi: " + ((int)Math.pow(2, i-1)) * ((int)Math.pow(2, i) -1 ));
			}
		}
	}
}
